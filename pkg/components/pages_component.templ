templ HomePage() {
<!DOCTYPE html>
<html>

<head>
    <title>Gerar Time</title>
    @scripts()
    <style>
    </style>
</head>

<body>
    <form class="form-container">
        <div style="display: flex; flex-flow: column; row-gap: 1rem;">
            <h2 style="text-align: center;">
                <p>Gerar time aleat√≥rio</p>
            </h2>
            <div>
                @GameSelector()
            </div>
